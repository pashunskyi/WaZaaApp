<UserControl x:Class="WaZaaApp.LoginUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaZaaApp"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
            mc:Ignorable="d" 
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
            TextElement.FontWeight="Regular"
            TextElement.FontSize="13"
            TextOptions.TextFormattingMode="Ideal"
            TextOptions.TextRenderingMode="Auto"
            Background="{DynamicResource MaterialDesignPaper}"
            FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="150" d:DesignWidth="500">

    <Grid Height="150" Width="500">
        <Ellipse  Grid.Column="3"
                  Grid.RowSpan="3">
            <Ellipse.Fill>
                <ImageBrush x:Name="RegisterAvatarImg"
                            
                            Stretch="Fill" ImageSource="/UserControls/DefaultUser.jpg">

                </ImageBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Button x:Name="SelectIamgeBtm"
                Height="110"
                Width="auto"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                Click="SelectIamgeBtm_Click"
                Grid.Column="3"
                Grid.RowSpan="3" >

        </Button>


        <TextBox x:Name="EmailTb" materialDesign:HintAssist.Hint="Email" Grid.ColumnSpan="3" Height="auto" VerticalAlignment="Center" VerticalContentAlignment="Bottom"/>
        <TextBox x:Name="LoginTb" materialDesign:HintAssist.Hint="Username" Grid.ColumnSpan="3" Height="auto" VerticalAlignment="Center" VerticalContentAlignment="Bottom" Grid.Row="1"/>
        <PasswordBox x:Name="PasswordTb" materialDesign:TextFieldAssist.HasClearButton="True" materialDesign:HintAssist.Hint="Password"  Height="auto" Grid.Row="2" Grid.ColumnSpan="3" VerticalContentAlignment="Bottom" VerticalAlignment="Center" />
        <Button x:Name="SignInBtm" Style="{StaticResource MaterialDesignRaisedDarkButton}" Background="#FF282E33" ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" Foreground="#FF20EEDA" BorderBrush="{x:Null}" Height="37" Grid.Row="3" Grid.ColumnSpan="2" VerticalAlignment="Center" Click="SignInBtm_Click" >Sign in</Button>
        <Button x:Name="LogInBtm" Style="{StaticResource MaterialDesignRaisedDarkButton}" Background="#FF282E33" ToolTip="Resource name: MaterialDesignRaisedLightDarkButton" Foreground="#FF20EEDA" BorderBrush="{x:Null}" Grid.ColumnSpan="2" Grid.Column="2" Height="37" Grid.Row="3" Click="LogInBtm_Click" >Log in</Button>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="105"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
    </Grid>
</UserControl>